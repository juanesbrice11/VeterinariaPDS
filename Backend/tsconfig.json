{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",                     
    "rootDir": "./src",                       
    "outDir": "./dist",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "experimentalDecorators": true,           
    "emitDecoratorMetadata": true,   
    "strictPropertyInitialization": false         
  },
  "include": ["src"],                        
  "exclude": ["node_modules", "dist"]        
}
